<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.obigo.appcenter.fragment.DownloadFragment">

    <RelativeLayout
        android:layout_width="@dimen/download_frag_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/content_main_border"
        android:paddingTop="24dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Downloading..."
            android:id="@+id/text_message"
            android:textSize="@dimen/default_title_text_size"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0%"
            android:id="@+id/text_percent"
            android:gravity="center"
            android:layout_below="@+id/text_message"
            android:textSize="@dimen/default_content_text_size"
            />
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/progressBar"
            android:layout_below="@+id/text_percent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_below="@id/progressBar"
            android:layout_centerHorizontal="true"
            android:text="Cancel"
            />
    </RelativeLayout>

</RelativeLayout>
